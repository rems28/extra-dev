# Depends on: gtk3 glib pango cairo pcre xorg-pixman xorg-fontconfig xcb-proto xproto renderproto kbproto xextproto xineramaproto inputproto fixesproto randrproto compositeproto damageproto wayland-protocols xorg-libxi

description="a free implementation of SSH and Telnet, along with an xterm terminal emulator"
url="http://www.chiark.greenend.org.uk/~sgtatham/putty/"

name=putty
version=0.70
release=1
source=(http://the.earth.li/~sgtatham/putty/$version/$name-$version.tar.gz
        gdk-display-beep.patch)

build() {
   cd $name-$version
   patch -p1 < ../gdk-display-beep.patch
   cd unix
   ./configure --prefix=/usr
   make -f Makefile.gtk
   make DESTDIR=$PKG install
}

